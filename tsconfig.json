{
   "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "lib": ["ES2020"],
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",

      // Module resolution
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,

      //performance
      "skipLibCheck": true,

      //
      "incremental": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["node"]
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
}
